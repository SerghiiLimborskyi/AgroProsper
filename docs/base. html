  <script>
    function saveCID() {
      const cid = document.getElementById("cidInput").value.trim();
      if (cid.length > 5) {
        localStorage.setItem("cid", cid);
        localStorage.setItem("agentLevel", "Agent");
        alert("‚úÖ CID –∞–∫—Ç–∏–≤–æ–≤–∞–Ω–æ: " + cid);
        location.reload();
      } else {
        alert("‚ùå –ù–µ–≤—ñ—Ä–Ω–∏–π —Ñ–æ—Ä–º–∞—Ç CID");
      }
    }

    function openStudioUpload() {
      location.href = "studio.html";
    }

